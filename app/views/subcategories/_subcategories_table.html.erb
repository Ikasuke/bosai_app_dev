<%  category.subcategories.each_with_index do |subcategory, i| %>
<%= form_with model:subcategory do |form| %>
<table class="table table-bordered"> 
   <thead>
       <th>index</th>
       <th>id</th>
       <th>大分類</th>
       <th>小分類</th>
       <th>変更</th>
       <th>登録日</th>
       <th>消去</th>
   </thead>

 <tbody> 
 <tr>  
  <td><%= "#{i+1}" %></td>
  <td><%= subcategory.id %></td>
  <td>
      <%= category.category_name %>
  </td>
  <td>
      <div class="form-group">
          <%= form.text_field :subcategory_name, class: "form-control" %>
      </div>
  </td>
  <td>
      <div class="actions">
          <%= form.submit "変更",:class=>"btn btn-primary" %>
      </div>
  </td>
  <td><%= subcategory.created_at %></td>
  <td>
      <div class="actions">
      <%= link_to '消去する', subcategory, method: :delete, data: { confirm: '削除します。よろしいですか?' }, class: 'btn red delete',remote: true%>
      </div>
  </td>
 </tr>  
</tbody>   
</table>
<% end %>  <!--  subcategory form_with -->
<% end %>   <!--  subcategory.each end -->