<p> サブカテゴリー管理　</p>

   <div class="subcategories_table">
          <%= render partial: 'subcategories_table', locals: {category: @category} %>   <!-- -->
   </div>


<%= form_with( model: Subcategory.new, url: subcategories_path) do |form| %>

    <div class="field">
      <%= form.label :subcategory_name %>
      <%= form.text_field :subcategory_name %>
      <%= form.hidden_field :category_id, :value => @category.id %>
    </div>
    <div class="actions">
       <%= form.submit "作成する",:class=>"btn btn-success" %>
    </div>
<% end %>

