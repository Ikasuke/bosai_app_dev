
<div class="items container ">
  <nav class = "navbar bg-warning navbar-dark box-header row">
    <a class = "navbar-brand" href="/">防災グッズ</a>
  </nav>
  
  <!-- タブボタン部分 -->
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a href="#tab1" class="nav-link active" data-toggle="tab">全て</a>
  </li>
  <li class="nav-item">
    <a href="#tab2" class="nav-link" data-toggle="tab">カテゴリー別</a>
  </li>
  <li class="nav-item">
    <a href="#tab3" class="nav-link" data-toggle="tab">期限近い</a>
  </li>
  <li class="nav-item">
    <a href="#tab4" class="nav-link" data-toggle="tab">コメント</a>
  </li>
</ul>

    <br>
   <div class="tab-content">
     <div id="tab1" class="tab-pane active">
       <div class="row" >
         <% if @items.nil? %>
         <% else%>
           <% @items.each do |item| %>
               <div class="item col-md-4">
                <%= link_to edit_item_path(item) do %>
                 <div class="col-md-10">
                   <div class= " p-3 item_pic">
                      <%= image_tag item.picture.url, class: "card-img-top"%>
                   </div> <!-- item_pic-->
                 </div>  <!-- col-md-->
                <% end %> <!-- link_to end -->
                 <table class="table">
                   <tr><td><%= "名前"%>:</td> <td><%= item.item_name %></td></tr>
                   <tr><td><%= "数量"%>:</td> <td><%= item.item_volume %></td></tr>
                   <% if item.item_expiry.blank? %>
                   <tr><td><%= "期限"%>:</td> <td> なし </td></tr>
                   <% else %>
                   <tr><td><%= "期限"%>:</td> <td><%= item.item_expiry.strftime('%Y年%m月%d日') %></td></tr>
                   <% end %>  <!-- if item.expiry end-->
                 </table>
               </div> <!-- item-->
            <% end %> <!-- @items.each end-->
         <% end %>  <!-- if end -->
        </div> <!-- row -->
     </div>   <!-- tab1 -->
     <div id="tab2" class="tab-pane">
        
        <% if @items.nil? %>
        <% else%>
        <% @categories.each do |category| %>
        <div class="row" >
        <strong><%= category.category_name %> </strong>  
          <% @items.each do |item| %>
                <% if item.category_id == category.id %>  
                <div class="item col-md-4">
                    <%= link_to edit_item_path(item) do %>
                     <div class="col-md-10">
                       <div class= " p-3 item_pic">
                          <%= image_tag item.picture.url, class: "card-img-top"%>
                       </div> <!-- item_pic-->
                     </div>  <!-- col-md-->
                    <% end %> <!-- link_to end -->
                     <table class="table">
                       <tr><td><%= "名前"%>:</td> <td><%= item.item_name %></td></tr>
                       <tr><td><%= "数量"%>:</td> <td><%= item.item_volume %></td></tr>
                       <% if item.item_expiry.blank? %>
                       <tr><td><%= "期限"%>:</td> <td> なし </td></tr>
                       <% else %>
                       <tr><td><%= "期限"%>:</td> <td><%= item.item_expiry.strftime('%Y年%m月%d日') %></td></tr>
                       <% end %>  <!-- if item.expiry end-->
                     </table>
                   </div> <!-- item-->
                <% else %>
                <% end %>
          <% end %> <!-- @items.each end-->
        </div>   <!-- row -->
         <% end %>   <!-- @categories end-->
          <% end %>  <!-- if end -->
       
     </div>  <!-- tab2-->

     <div id="tab3" class="tab-pane">
        <p>a</p>

      </div>  <!-- tab3-->
      <div id="tab4" class="tab-pane">


      </div>  <!-- tab4-->

    </div>  <!-- tab-content -->
</div>  <!-- items container -->

<% content_for :sidebar_left do %>
<div class= 'profile'>
  <nav class = "navbar bg-warning navbar-dark box-header">
    <a class = "navbar-brand" href="/user/profile">プロフィール</a>
    <p><%= link_to '編集', user_profile_path %></p>
  </nav>

  <div class="col-md-12">
       <div class= "card p-4">
             <%= image_tag current_user.avatar.url, class: "card-img-top rounded-circle"%>
       </div>
  </div>

<table class="table">

<tr><td>名前:</td><td><%= @user.public_name %></td></tr>
<tr><td>エリア:</td> <td><%= @user.area1 %> / <%= @user.area2 %></td></tr>
<tr><td>家族構成:</td> <td><%= @user.family %></td></tr>
<% if @remindmails.nil? %>
<% else%>
  <% @remindmails.each_with_index do |remindmail, i| %>
       <tr><td><%= "メールアドレス#{i+1}"%>:</td> <td><%= remindmail.remind_email %></td></tr>
  <% end %>
 <% end %>

 <%if @user.role == "admin" %>
  <tr><td></td>
  <td><%= link_to "アドミンページ", admin_users_path, :target=>["_blank"] %></td></tr>
<% end %>

</table>
</div>



<% end %>
