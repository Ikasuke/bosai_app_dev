<div class="items">
   
     <table class="table table-borderless">
<!--name-->    
               <tr>
                 <td> グッズ名:
                 </td>
                 <td> <%= @item.item_name%>
                 </td>
                 </tr>
 <!-- 大分類-->
                <tr>
                  <td>大分類</td>
                  <td> <% if @item.category.id == 1 %>
                              <i class="fa fa-tint fa-2x" style="color:#4080ff;"></i>
                          <% elsif @item.category.id == 2 %>
                              <i class="fa fa-cutlery fa-2x" style="color:#808080;"></i>
                          <% elsif @item.category.id == 3 %>
                              <i class="fa fa-home fa-2x" style="color:#f8c10e;"></i>
                          <% end %>
                  </td>
                </tr>
<!-- 小分類-->
                <tr>
                  <td>小分類</td>
                  <td>   <%= @item.subcategory.subcategory_name %>
                  </td>
                </tr>

     </table>
      
<!-- picture-->
        <div class="" style="margin:100px;" >
          <%= image_tag @item.picture.url, class: "card-img-top"%>
        </div>

   

<!--public_memo--> 
<p>memo<p>   
   <div class="public_memo_explain_smart" style="margin:10px;">
                        <%= simple_format(@item.item_public_memo) %>
   </div>

<br>

<!-- イイネボタン、いいね数、コメント数表示部の始まり-->   
           <div class="row">
            <div class="col-md-3"></div>
               <div class="col-md-6">
                <div  class="goodbtn_item<%= @item.id %> goodbtn_part_smart">
                   <% if @like_hash.has_value?(@item.id)%>
                     <%= button_to likeitem_path(@like_hash.key(@item.id)), method: :delete, class: 'off-btn',remote: true do %>
                     取り消す
                     <% end %>
                   <% else %>
     　               <%= form_with model: Likeitem.new do |form|%>
                        <%= form.hidden_field :item_id, :value => @item.id %>
                        <%= form.hidden_field :user_id, :value => current_user.id %>
                        <%= form.submit "いいね", :class=>"good-btn" %>
                      <% end %>       
                   <% end %>
                </div> <!-- いいねボタン -->
            </div>
            </div>
            <div class="count_region"> <!-- いいね数、コメント数-->
                  <span class="count_part_smart">
                      いいね:<span class="count_item<%= @item.id %>"><%= @item.likeitems.count %></span>件/
                      コメント数:<span class="comment_num<%= @item.id %>" ><%= @item.comments.count %></span>件
                  </span>
            </div> <!-- いいね数、コメント数　end-->

  <br><br>
    
  <%= link_to "#{@item.user.public_name}さんのページへ", user_path(@item.user.id), class: 'btn btn-default gray',style: "font-size: 48px;" %>
  <br><br>

</div>  <!-- items -->

<br>

<div class="items">
    <nav class = "navbar bg-warning navbar-dark box-header">
        <a class = "navbar-brand" style="font-size:48px;">コメント</a>
      </nav>
 <!-- コメント欄始まり  * tab0とする-->        
           <div style="padding: 0 20px;"> <!--コメント欄 -->    
              <div class="comments_box" id="tab0_comments_box_<%= @item.id %>" >
              <!-- comment/index をjs で呼び出して表示  -->
              </div>   
           </div> <!-- row-->
  <!-- コメント欄終わり -->
     <br>     
  <!-- コメント記入部-->
               <%= form_with model: Comment.new do |form|%>
                 <div class="row">
                    <div class="col-md-9">
                      <div class="field form-group" style="margin:0; text-align:left;">
                              <%= form.text_area :comment_detail,placeholder: 'コメントを記入してください',class:'', style:"width:700px;"%>
                      </div>  <!-- field -->
                      <%= form.hidden_field :item_id, :value => @item.id %>
                       <!-- picture-->       
                       <div class="img_field img_point" onClick='$("#file_<%= @item.id %>").click()' >  <!-- アイコン表示 jqueryでクリックされるとfiel_fieldに入る -->
                           <i class="fa fa-image fa-2x"></i>
                       </div>
                        <div class = "form-group">
                           <%= form.file_field :comment_picture, class: "item_#{@item.id} form_pic_mc", style: "display:none;", id: "file_#{@item.id}" %>
                        </div>  <!-- form-group -->
                         <br>
                        <div class="row">
                          <div class="col-lg-4 col-md-4 col-sm-4">
                              <br>
                               <div class= "preview_<%= @item.id %>">
                                  <%= image_tag '' ,class:"card-img-top" %>
                               </div>
                          </div>
                        </div>
                        <!-- picture end -->

                    </div>
                    <div class="col-md-3">
                       <%= form.submit "コメント", :class=>"btn btn-info",:name=> "tab0_commit_id#{@item.id}",style: "font-size:48px; width:200px;"  %>
                    </div>   <!-- col-md-3 -->
                 </div>  <!-- コメント記入部 row　end-->
               <% end %>  <!-- form_with Commnet  -->

  </div>   <!-- items container end-->

</div>
<br>
<%= render "layouts/yield_footer" %>  
  <br><br><br><br>