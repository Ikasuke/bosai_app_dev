<div class="items container ">
        <nav class = "navbar bg-warning navbar-dark box-header row">
          <a class = "navbar-brand" style="color:#ffffff;">みんなのグッズ</a>
        </nav>

  <!-- タブボタン部分 -->
       <ul class="nav nav-tabs row">
        <li class="nav-item">
          <a href="#tab1" class="nav-link active" data-toggle="tab">グッズを探す</a>
        </li>
        <li class="nav-item">
          <a href="#tab2" class="nav-link" data-toggle="tab">いいねグッズ</a>
        </li>
      </ul>

 <br>
<!-- タブ内容部分 -->
  <div class="tab-content row">
    <div id="tab1" class="tab-pane active container">   
        <%= form_with(url: '/items',method: 'get',local: true) do |form|%>
        <%= form.hidden_field :select_category_id, :value => @select_category_id , class: "select_category_id" %>  <!-- js用カテゴリアイコン 検索結果が表示されるように変数を格納 -->
        <%= form.hidden_field :family_num, :value => @family_num , class: "family_num" %> <!-- js用家族構成チェックボックス 検索結果が表示されるように変数を格納 -->
<!-- 検索選択部分 -->
      <div class = "col-lg-12 col-md-12 col-sm-12 col-xs-12" >
<!-- カテゴリー選択 -->
        <div class = "row category_search">
         <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
          <span style="font-size:14px; font-weight:bold;">
          分類を選択
          </span>
         </div>
         <div class="search col-lg-8 col-md-8 col-sm-8 col-xs-8">
           <br>
           <%= form.label :大分類 %>
             &emsp;
            <span class="water_search" >  <!-- アイコン表示 jqueryでクリックされるとfiel_fieldに入る -->
                           <i class="water_icon fa fa-tint fa-3x"  id ="<%= @subcategories[1].to_json %>" style="color:#e0e0ff;"></i>
                       </span>&emsp;
            <span class="food_search">  <!-- アイコン表示 jqueryでクリックされるとfiel_fieldに入る -->
                          <i class="food_icon fa fa-cutlery fa-3x"  id ="<%= @subcategories[2].to_json %>" style="color:#e0e0e0;"></i>
             </span>&emsp;
            <span class="goods_search">  <!-- アイコン表示 jqueryでクリックされるとfiel_fieldに入る -->
                          <i class="goods_icon fa fa-home fa-3x"  id ="<%= @subcategories[3].to_json %>" style="color:#fff080;"></i>
             </span>&emsp;
             &emsp;&emsp; <%= form.label :小分類 %>
             &emsp; <%= form.select :subcategory_id,[@select_subcategory],{}, {:class => "btn category_tab"}%>
             <span id="category_display" style="display:none;" ></span>
             <br>
         </div> <!-- col-->
        </div> <!-- row-->
<!-- カテゴリー選択end -->
          <br>
<!-- エリア選択 -->
        <div class="row area_search">
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
           <span style="font-size:14px; font-weight:bold;">
           地域を選択
           </span>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
           <br>
           <div class = "form-group search">
            <%= form.label :都道府県 %>
            <%= form.select :area1, [@area1],{} ,{ class: "form-control" }  %>
           </div>
            &emsp;&emsp; 
　         <div class = "form-group search">
               <%= form.label :市町村 %>
               <%= form.select :area2, [@area2],{} ,{ class: "form-control" }  %>
           </div>
          </div> <!-- col -->
        </div> <!-- row -->
<!-- エリア選択end -->
          <br>
<!-- 家族構成選択 -->
        <div class="row family_search">
          <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
           <span style="font-size:14px; font-weight:bold;">
            家族構成を選択
           </span>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
           <br>
            <% %w(一人暮らし 65歳以上の人がいる 子供がいる(未就学児含む) 未就学児がいる ).each.with_index do |ingredient,i| %>
             <label>
               <%= check_box_tag "family[]", ingredient,false,id:"family_ingredients_#{i}" %>
               <%= ingredient %>
               &emsp;
              </label>
            <% end %>
          </div> <!-- col -->   
        </div> <!-- row -->
<!-- 家族構成選択end -->
         <br>
        <%= form.hidden_field :search, :value => 'true' %>
        <%= form.submit "検索", :class=>"btn btn-info", :style=>"width:150px;" %>
        <% end %>
      </div> <!-- col 12 -->
       <br>
       <hr style="border: solid 3px;color:#c0c0c0;">
      <div class="reading_table" id="reading_table_tab1">
          <%= render partial: 'reading_table', locals: {items: @items, like_hash: @like_hash, tab: "tab1"} %>   <!-- 検索結果が表示される -->
      </div>
      <div class = "row reading_table_tab1_pagenate">
            &emsp;&emsp;<%= paginate @items,params: {:tab => "tab1", :area1 => @area1, :area2=>@area2}, :remote => false %>  <!-- trueにするとコメント画像の一時表示ができない（jsが発火しないため) -->
      </div>
   </div> <!-- tab1 container-->

   <div id="tab2" class="tab-pane container">
       <p> いいねしたアイテムが表示されます </p>
       <p> 表示されない場合は、ページを更新してください </p>
        <div class="reading_table" id="reading_table_tab2">
           <%= render partial: 'reading_table', locals: {items: @items_like, like_hash: @like_hash, tab: "tab2"} %> 
        </div>

   </div>  <!-- tab2 end-->
  
</div>  <!-- tab-content -->
</div>  <!-- items container-->

<% content_for :sidebar_left do %>
 <%= render partial: 'layouts/sidebar', locals: {user: @user, remindmails: @remindmails} %>
<% end %>