<div class="items container ">
        <nav class = "navbar bg-warning navbar-dark box-header row">
          <a class = "navbar-brand" href="/">みんなのグッズ</a>
        </nav>

<!-- タブボタン部分 -->
<ul class="nav nav-tabs">
        <li class="nav-item">
          <a href="#tab1" class="nav-link active" data-toggle="tab">グッズから探す</a>
        </li>
        <li class="nav-item">
          <a href="#tab2" class="nav-link" data-toggle="tab">カテゴリーから探す</a>
        </li>
        <li class="nav-item">
          <a href="#tab3" class="nav-link" data-toggle="tab">エリアから探す</a>
        </li>
        <li class="nav-item">
          <a href="#tab4" class="nav-link" data-toggle="tab">いいねグッズ</a>
        </li>
      </ul>

<br>
<!-- タブ内容部分 -->
<div class="tab-content">
   <div id="tab1" class="tab-pane active">

   



    <table class="table">
     <% @items.each do |item| %>
     <tr><td>
        <div class="row">
          <div class="col-md-2">
          <div class= "card p-4">
                <%= image_tag item.user.avatar.url, class: "card-img-top rounded-circle"%>
          </div>
          <p> <%= item.user.public_name %></p>
        </div>  
          <div class="item col-md-3">
                <%= link_to edit_item_path(item) do %>
                 <div class="col-md-10">
                   <div class= " p-3 item_pic">
                      <%= image_tag item.picture.url, class: "card-img-top"%>
                   </div> <!-- item_pic-->
                 </div>  <!-- col-md-->
                <% end %> <!-- link_to end -->
          </div>
        <div class="col-md-7">
      <p><%= item.item_name %> </p>
      <%= item.item_volume %>
      <%= item.item_public_memo %>
    </div>
         </div>  <!-- row-->
         <div class="row comments">    
               <% item.comments.each do |comment| %>
               <div class="col-md-2"></div>   
               <div class="col-md-2">
                    <div class= "card p-4">
                          <%= image_tag comment.user.avatar.url, class: "card-img-top rounded-circle"%>
                    </div>
                    <p> <%= comment.user.public_name %></p>
                  </div>
                  <div class="col-md-8">
                   <div class="balloon1-left">     
                 <p><%= comment.comment_detail %></p>
                   </div>
                  </div>
               <% end %>  
                
         </div> <!-- row-->


         <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                    <%= form_with model: Comment.new do |form|%>
                    <div class="field form-group">
                            <%= form.label :"コメントを記入する" %>
                            <%= form.text_area :comment_detail,class:'form-control'%>
                         </div>  <!-- field box_comment_detail-->
                       <%= form.hidden_field :item_id, :value => item.id %>
                     <%= form.submit "コメントする", :class=>"btn btn-info" %>
                    <% end %>  <!-- form_with Commnet  -->
            </div>   <!-- col-md-9 -->
         </div>  <!--row-->
        </td></tr>
     <% end %>

    </table>
   </div> <!-- tab1 -->

   <div id="tab2" class="tab-pane"></div>  <!-- tab2-->
   <div id="tab3" class="tab-pane"></div>  <!-- tab3-->
   <div id="tab4" class="tab-pane"></div>  <!-- tab4-->

</div>  <!-- tab-content -->
</div>  <!-- items container-->

<% content_for :sidebar_left do %>
 <%= render partial: 'layouts/sidebar', locals: {user: @user, remindmails: @remindmails} %>
<% end %>