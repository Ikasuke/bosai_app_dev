
<h1 style="font-size:64px;">ログイン画面</h1>
<div style="font-size:48px;margin:30px;">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-group">
  <%= f.label "メールアドレス もしくは ユーザーネーム"  %><br />
  <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email or username",style: "font-size:40px; height:100px; width:800px;  border:solid;" %>
</div>

  <div class="form-group">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control ", placeholder: "Password",style: "font-size:40px; height:100px; width:800px;  border:solid;" %>
  </div>
    <br>
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
    &emsp;<%= f.check_box :remember_me, {style:" transform: scale(3);"} %>
      &emsp;<%= f.label :ログインを保存する %>
    </div>
  <% end -%>
  <br>
  <div class="actions pb-5">
    <%= f.submit "ログインする", class: "btn btn-primary",style: "font-size:48px; width:400px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>