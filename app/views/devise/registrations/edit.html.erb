<h2>ログイン情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <div class="form-group">
    <%= f.label :ユーザー名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control col-md-5 col-sm", placeholder: "Enter name" %>
  </div>

  <div class="form-group">
    <%= f.label :ログイン用メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-5 col-sm", placeholder: "Enter email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :新しいパスワード %> <i>(変更しない場合は、空欄のままにしておいて下さい。)</i><br />
     <em><%= @minimum_password_length %> 文字以上</em>
    <%= f.password_field :password, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "Password" %>
    <% if @minimum_password_length %>
      <br />   
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード再入力 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "password_confirmation" %>
  </div>

  <div class="form-group">
    <%= f.label :現在のパスワード %> <i>(ユーザー情報を変更する場合には入力が必要です。)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "Current password" %>
  </div>

  <div class="actions pb-5">
    <%= f.submit "アップデート", class: "btn btn-primary" %>
     <%= link_to"戻る", home_path,:class=> 'btn gray'  %>
  </div>
<% end %>

<h3>アカウント削除</h3>

<p>削除する場合はこちらです。
<%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に、削除しますか？" }, method: :delete, class: "btn btn-danger mb-5" %></p>

<%= link_to "戻る", :back %>
