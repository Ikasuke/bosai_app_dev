<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :ユーザーネーム（ローマ字） %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control col-md-5 col-sm", placeholder: "Enter username" %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-md-5 col-sm", placeholder: "Enter email" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上入力)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "Password" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード再入力 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "password_confirmation" %>
  </div>

  <div class="actions pb-5">
    <%= f.submit "登録", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
