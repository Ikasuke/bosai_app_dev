
<% if params[:tab] == "tab1" %>
     $("#region_search_tab1").html( "<%= escape_javascript(render partial: 'region_search', locals: {allusers: @allusers, max_items: @max_items, favorite_hash: @favorite_hash, tab: "tab1", new_murmurs: @new_murmurs}) %>" );
     $(".region_search_tab1_pagenate").html( "&emsp;&emsp;<%= escape_javascript(paginate @allusers,params: {:tab => "tab1"}, :remote => true) %>" );
<% end %>

